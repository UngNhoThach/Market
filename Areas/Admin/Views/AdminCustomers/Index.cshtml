@using PagedList.Core.Mvc
@model PagedList.Core.IPagedList<Market.Models.Customer>

@{
    int CurrentPage = ViewBag.CurrentPage;
    int TotalPage = ViewBag.TotalPage;
    ViewData["Title"] = "Danh sách khách hàng";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<!-- Content Wrapper START -->
<div class="main-content">
    <div class="page-header">
        <div class="header-sub-title">
            <nav class="breadcrumb breadcrumb-dash">
                <a  class="breadcrumb-item" asp-area="Admin" asp-controller="Home" asp-action="Index"><i class="anticon anticon-home m-r-5"></i>Home</a>
                <span class="breadcrumb-item active">Danh sách khách hàng : page @CurrentPage</span>
            </nav>
        </div>
    </div>
    <div class="card">
        <div class="card-body">
            <div class="row m-b-30">
                <div class="col-lg-8">
                    <div class="d-md-flex">
                        <div class="m-b-10 m-r-15">
                            
                        </div>
                        <div class="m-b-10">
                            <select class="custom-select" style="min-width: 180px;" asp-items="ViewBag.Status">
                                <option value="" selected>Trạng thái</option>
                            </select>
                        </div>
                    </div>
                </div>
                <div class="col-lg-4 text-right">
                    
                </div>
            </div>
            <div class="table-responsive">
                <table class="table table-hover e-commerce-table">
                    <thead>
                        <tr>
                            <th>STT</th>
                            <th>ID</th>
                            <th>Avatar</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Phone</th>
                            <th>Address</th>
                            <th>Birthday</th>
                            <th>Active</th>
                            <th>#</th>
                        </tr>
                    </thead>

                    <tbody>
                    @if (Model !=null)
                    {
                            int stt = 1;
                            @foreach(var item in Model)
                        {
                                <tr>
                                    <td scope="row">@(stt++)</td>
                                    <td>@item.CustomerId</td>
                                    <td>
                                        @item.Avatar
                                        @*<div class="d-flex align-items-center">
                                            <img class="img-fluid rounded" src="assets/images/others/thumb-9.jpg" style="max-width: 60px" alt="">
                                        </div>*@
                                    </td>
                                    <td>@item.FullName</td>
                                    <td>@item.Email</td>
                                    <td>@item.Phone</td>
                                    <td>@item.Address</td>
                                    <td>@item.Birthday</td>
                                    @if (item.Active)
                                    {
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="badge badge-success badge-dot m-r-10"></div>
                                            </div>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <div class="d-flex align-items-center">
                                                <div class="badge badge-danger badge-dot m-r-10"></div>
                                            </div>
                                        </td>
                                    }
                                    <td class="text-right">
                                        <a class="btn btn-primary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminCustomers" asp-action="Details" asp-route-id="@item.CustomerId">View</a>
                                        <a class="btn btn-secondary btn-tone m-r-5" asp-area="Admin" asp-controller="AdminCustomers" asp-action="Edit" asp-route-id="@item.CustomerId">Edit</a>
                                        <a class="btn btn-danger btn-tone m-r-5" asp-area="Admin" asp-controller="AdminCustomers" asp-action="Delete" asp-route-id="@item.CustomerId">Delete</a>
                                    </td>
                                </tr>
                                }
                     }
                     </tbody>
                </table>
            </div>
            <div class="row m-b-30">
                <div class="col-lg-8">
                    <div class="dataTables_info" id="DataTables_Table_0_info" role="status" aria-live="polite">Page @CurrentPage của @TotalPage  </div>
                </div>
                <div class="col-lg-4 text-right">
                    <ul class="pagination">
                         <pager list="@Model" asp-area="Admin" asp-controller="AdminCustomers" asp-action="Index"></pager>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>
